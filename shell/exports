# Homebrew
eval "$(/opt/homebrew/bin/brew shellenv)"

# oh-my-zsh
export DEFAULT_USER=`whoami`

# SSH
export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock

# Languages
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';
export LESSCHARSET=utf-8; # Fix russian text in less, git diff, etc.

# Setup colors
export TERM=xterm-256color
export CLICOLOR=1
export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd

# Setup editor
export EDITOR='vim';

# Path Sources
path_prepend "$(brew --prefix)/opt/findutils/libexec/gnubin"
path_prepend "$(brew --prefix)/opt/coreutils/libexec/gnubin"
path_prepend "$(brew --prefix)/opt/ruby/bin"
path_prepend "$(brew --prefix)/opt/crowdin@3/bin"
path_prepend "$(brew --prefix)/opt/llvm@20/bin"
path_append "$HOME/.antigravity/antigravity/bin"
path_append "$HOME/.local/bin"
path_append /usr/local/bin/
