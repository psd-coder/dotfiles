# Common exports (platform-specific in shell/platform/)

# Languages
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';
export LESSCHARSET=utf-8; # Fix russian text in less, git diff, etc.

# Setup colors
export TERM=xterm-256color
export CLICOLOR=1

# Setup editor
export EDITOR='vim';

# Common paths
path_append "$HOME/.local/bin"
path_append /usr/local/bin/

# Source platform-specific exports
PLATFORM_FILE="$HOME/.dotfiles/shell/platform/$(uname -s | tr '[:upper:]' '[:lower:]').sh"
[[ -f "$PLATFORM_FILE" ]] && source "$PLATFORM_FILE"
